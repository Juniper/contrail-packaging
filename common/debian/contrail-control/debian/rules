#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := $(SB_TOP)/build/debian/contrail-control
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):$(SB_TOP)/build/debian/contrail-libs/usr/lib64/contrail

export _contrailetc := /etc/contrail
export _supervisordir := /etc/contrail/supervisord_control_files
export _bindir := /usr/bin
export _initddir := /etc/init.d
export _initdir := /etc/init
export _src_config := $(SB_TOP)/tools/packaging/common/control_files

export _venv_root := /opt/contrail/control-venv
export _venvtr := --prefix=$(_venv_root)
export _pyver := 2.7
export _pysitepkg := /lib/python$(_pyver)/site-packages
export _build_dist := $(_builddir)/build/debug
export _sysconfdir := /etc

BUILDTAG =
ifdef TAG
BUILDTAG = $(TAG)
else
BUILDTAG = $(BUILDTIME)
endif

TARGETS=control-node
%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build:
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog
	(cd ${SB_TOP} && scons ${TARGETS})

override_dh_auto_install: 
	# setup directories
	install -d -m 755 $(buildroot)$(_bindir)
	install -d -m 755 $(buildroot)$(_sysconfdir)
	install -d -m 755 $(buildroot)$(_sysconfdir)/contrail
	install -p -m 755 ${SB_TOP}/build/debug/control-node/control-node $(buildroot)$(_bindir)/control-node
	# TODO: Remove this after spec files for other platforms are fixed.
	perl -ni -e 's/source \/opt\/contrail\/control-venv\/bin\/activate && exec python \/opt\/contrail\/control-venv/\/usr/g; print $$_;' $(buildroot)$(_sysconfdir)/contrail/supervisord_control.conf
	install -p -m 755 $(_src_config)/control_param $(buildroot)/$(_sysconfdir)/contrail/control_param
	install -D -m 644 $(_src_config)/control-node.conf $(buildroot)/$(_sysconfdir)/control-node.conf

override_dh_usrlocal:

override_dh_shlibdeps:
	dh_shlibdeps --dpkg-shlibdeps-params=--ignore-missing-info

