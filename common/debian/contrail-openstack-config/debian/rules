#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):$(SB_TOP)/build/debian/contrail-libs/usr/lib64/contrail

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := $(SB_TOP)/build/debian/contrail-openstack-config
export _bindir := /usr/bin
export _initddir := /etc/init.d
export _initdir := /etc/init
export _sysconfdir := /etc
export _src_config := $(SB_TOP)/tools/packaging/common/control_files

SRC_VER := $(shell cat $(SB_TOP)/controller/src/base/version.info)

BUILDTAG =
ifdef TAG
BUILDTAG = $(SRC_VER)-$(TAG)
else
BUILDTAG = $(SRC_VER)-$(BUILDTIME)
endif

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog

override_dh_auto_install:
	# Install all the directories
	install -d -m 755 $(buildroot)$(_bindir)
	install -d -m 755 $(buildroot)$(_initdir)
	install -d -m 755 $(buildroot)$(_initddir)
	install -d -m 755 $(buildroot)$(_sysconfdir)
	install -d -m 755 $(buildroot)$(_sysconfdir)/contrail
	install -d -m 755 $(buildroot)$(_sysconfdir)/contrail/supervisord_config_files
	install -d -m 755 $(buildroot)$(_sysconfdir)/contrail/supervisord_support_service_files
	# Install upstart, supervisord ini for rabbitmq-server
	install -p -m 755 $(_src_config)/rabbitmq-server.initd.supervisord $(buildroot)$(_initddir)/rabbitmq-server.initd.supervisord
	install -p -m 755 $(_src_config)/ifmap.initd.supervisord $(buildroot)$(_initddir)/ifmap
	install -p -m 755 $(_src_config)/rabbitmq-server.ini $(buildroot)$(_sysconfdir)/contrail/supervisord_support_service_files/rabbitmq-server.ini
	install -p -m 755 $(_src_config)/ifmap.ini $(buildroot)$(_sysconfdir)/contrail/supervisord_config_files/ifmap.ini
	install -p -m 755 $(_src_config)/contrail-nodemgr-config.ini $(buildroot)$(_sysconfdir)/contrail/supervisord_config_files/contrail-nodemgr-config.ini
	# Install upstart, supervisord ini for support-services
	install -p -m 755 $(_src_config)/supervisord_support_service.conf $(buildroot)$(_sysconfdir)/contrail/supervisord_support_service.conf
	install -D -m 755 $(_src_config)/supervisor-support-service.upstart $(buildroot)$(_initdir)/supervisor-support-service.conf
	install -p -m 755 $(_src_config)/contrail-config-nodemgr.conf $(buildroot)$(_sysconfdir)/contrail/contrail-config-nodemgr.conf

override_dh_usrlocal:	


override_dh_shlibdeps:
