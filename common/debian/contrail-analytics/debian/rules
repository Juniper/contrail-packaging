#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := $(SB_TOP)/build/debian/contrail-analytics
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):$(SB_TOP)/build/debian/contrail-libs/usr/lib64/contrail

export _bindir := /usr/bin
export _initddir := /etc/init.d
export _venv_root := /opt/contrail/analytics-venv
export _venvtr := --prefix=$(_venv_root)
export _pyver := 2.7
export _pysitepkg := /lib/python$(_pyver)/site-packages
export _build_dist := $(SB_TOP)/build/debug
export _srcdir = $(SB_TOP)/build/python_dist
export _sysconfdir := /etc
export _optdir := /opt
export _usrdir := /usr
export _src_config := $(SB_TOP)/tools/packaging/common/control_files

SRC_VER := $(shell cat $(SB_TOP)/controller/src/base/version.info)

BUILDTAG =
ifdef TAG
BUILDTAG = $(SRC_VER)-$(TAG)
else
BUILDTAG = $(SRC_VER)-$(BUILDTIME)
endif

__python ?= /usr/bin/python

TARGETS=src/analytics:vizd \
	src/query_engine:qed \
	src/opserver:opserver \
	controller/src/sandesh/common \
	src/discovery:client \
	sandesh/library/python:pysandesh \

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog
	(cd ${SB_TOP}; scons -U ${TARGETS})

	mkdir -p $(_srcdir)
	(cd $(_srcdir); tar zxf $(_build_dist)/opserver/dist/opserver-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/discovery/client/dist/discoveryclient-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/sandesh/common/dist/sandesh-common-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/tools/sandesh/library/python/dist/sandesh-0.1dev.tar.gz)

override_dh_auto_install: 
	# Setup directories
	rm -rf $(buildroot)s
	install -d -m 755 $(buildroot)/bin
	install -d -m 755 $(buildroot)$(_bindir)
	install -d -m 755 $(buildroot)$(_sysconfdir)/contrail
	install -d -m 755 $(buildroot)$(_optdir)/contrail/utils
	install -d -m 755 $(buildroot)$(_optdir)/contrail/analytics
	install -d -m 755 $(buildroot)$(_usrdir)/lib/systemd/system
	install -d -m 755 $(buildroot)$(_usrdir)/lib64/contrail
	install -d -m 755 $(buildroot)$(_usrdir)/local/lib/python2.7/dist-packages

	# install libraries 

# 	Install opserver pkg
	(cd $(_srcdir)/opserver-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))
	(cd $(_srcdir)/discoveryclient-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))
	(cd $(_srcdir)/sandesh-common-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))
	(cd $(_srcdir)/sandesh-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

	# install files
	install -d -m 755 $(buildroot)$(_bindir)
	install -p -m 755 ${SB_TOP}/build/debug/analytics/vizd    $(buildroot)$(_bindir)/vizd
	install -p -m 755 ${SB_TOP}/build/debug/query_engine/qed  $(buildroot)$(_bindir)/qed
	install -D -m 755 ${SB_TOP}/controller/src/analytics/ruleparser/tabledump.py $(buildroot)$(_optdir)/contrail/analytics/tabledump.py
	install -D -m 755 ${SB_TOP}/controller/src/analytics/ruleparser/tabledump $(buildroot)$(_optdir)/contrail/analytics/tabledump
	install -D -m 755 ${SB_TOP}/controller/src/opserver/log.py $(buildroot)$(_optdir)/contrail/utils/log.py
	install -D -m 755 ${SB_TOP}/controller/src/opserver/stats.py $(buildroot)$(_optdir)/contrail/utils/stats.py
	install -D -m 755 ${SB_TOP}/controller/src/opserver/flow.py $(buildroot)$(_optdir)/contrail/utils/flow.py
	install -D -m 755 ${SB_TOP}/controller/src/opserver/contrail-logs $(buildroot)$(_optdir)/contrail/utils/contrail-logs
	install -D -m 755 ${SB_TOP}/controller/src/opserver/contrail-logs $(buildroot)$(_bindir)/contrail-logs
	install -D -m 755 ${SB_TOP}/controller/src/opserver/contrail-stats $(buildroot)$(_optdir)/contrail/utils/contrail-stats
	install -D -m 755 ${SB_TOP}/controller/src/opserver/contrail-stats $(buildroot)$(_bindir)/contrail-stats
	install -D -m 755 ${SB_TOP}/controller/src/opserver/contrail-flows $(buildroot)$(_optdir)/contrail/utils/contrail-flows
	install -D -m 755 ${SB_TOP}/controller/src/opserver/contrail-flows $(buildroot)$(_bindir)/contrail-flows

	install -D -m 644 $(_src_config)/vizd_param $(buildroot)/$(_sysconfdir)/contrail/vizd_param
	install -D -m 644 $(SB_TOP)/controller/src/analytics/contrail-collector.conf $(buildroot)/$(_sysconfdir)/contrail/collector.conf
	install -D -m 644 $(SB_TOP)/controller/src/query_engine/contrail-query-engine.conf $(buildroot)/$(_sysconfdir)/contrail/query-engine.conf
	install -D -m 644 $(_src_config)/qe_param $(buildroot)/$(_sysconfdir)/contrail/qe_param
	install -D -m 644 $(_src_config)/opserver_param $(buildroot)/$(_sysconfdir)/contrail/opserver_param

override_dh_shlibdeps: 

override_dh_usrlocal:	

