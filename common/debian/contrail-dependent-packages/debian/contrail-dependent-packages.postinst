#!/bin/bash
cd /etc/apt/

# create repo with only local packages
datetime_string=`date +%Y_%m_%d__%H_%M_%S`
cp sources.list sources.list.$datetime_string_dependent_pkgs
echo "deb file:/opt/contrail/contrail_dependents_repo ./" > local_repo

#modify /etc/apt/soruces.list/ to add local repo on the top
grep "deb file:/opt/contrail/contrail_dependents_repo ./" sources.list

if [ $? != 0 ]; then
     cat local_repo sources.list > new_sources.list
     mv new_sources.list sources.list
fi

touch /opt/contrail/.contrail_dependent_packages
