#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := $(SB_TOP)/build/debian/contrail-database
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):$(SB_TOP)/build/debian/contrail-libs/usr/lib64/contrail

export _bindir := /usr/bin
export _initddir := /etc/init.d
export _venv_root := /opt/contrail/database-venv
export _venvtr := --prefix=$(_venv_root)
export _pyver := 2.7
export _pysitepkg := /lib/python$(_pyver)/site-packages
export _build_dist := $(SB_TOP)/build/debug
export _srcdir = $(SB_TOP)/build/python_dist
export _sysconfdir := /etc
export _optdir := /opt
export _usrdir := /usr
export _src_config := $(SB_TOP)/tools/packaging/common/control_files

__python ?= /usr/bin/python

BUILDTAG =
ifdef TAG
BUILDTAG = $(TAG)
else
BUILDTAG = $(BUILDTIME)
endif

TARGETS=src/analytics/database:database \
	controller/src/sandesh/common \
	controller/src/discovery/client \
	sandesh/library/python:pysandesh \

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog
	(cd ${SB_TOP}; scons -U ${TARGETS})

	mkdir -p $(_srcdir)
	(cd $(_srcdir); tar zxf $(_build_dist)/analytics/database/dist/database-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/discovery/client/dist/discoveryclient-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/sandesh/common/dist/sandesh-common-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/tools/sandesh/library/python/dist/sandesh-0.1dev.tar.gz)

override_dh_auto_install: 
	# Setup directories
	rm -rf $(buildroot)s
	install -d -m 755 $(buildroot)/bin
	install -d -m 755 $(buildroot)$(_bindir)
	install -d -m 755 $(buildroot)$(_sysconfdir)/contrail
	install -d -m 755 $(buildroot)$(_optdir)/contrail/utils
	install -d -m 755 $(buildroot)$(_optdir)/contrail/analytics
	install -d -m 755 $(buildroot)$(_usrdir)/lib/systemd/system
	install -d -m 755 $(buildroot)$(_usrdir)/lib64/contrail
	install -d -m 755 $(buildroot)$(_usrdir)/local/lib/python2.7/dist-packages

	# install libraries 

# 	Install opserver pkg
	(cd $(_srcdir)/database-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))
	(cd $(_srcdir)/discoveryclient-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))
	(cd $(_srcdir)/sandesh-common-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))
	(cd $(_srcdir)/sandesh-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

override_dh_usrlocal:	
