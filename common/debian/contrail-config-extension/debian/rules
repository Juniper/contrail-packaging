#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)

export  buildroot := $(SB_TOP)/build/debian/contrail-config-extension
export  _venv_root :=  /opt/contrail/api-venv
export _venvtr := --prefix=$(_venv_root)
export _pyver := 2.7
export _pysitepkg := /lib/python$(_pyver)/site-packages

BUILDTAG =
ifdef TAG
BUILDTAG = $(TAG)
else
BUILDTAG = $(BUILDTIME)
endif

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog
	(cd ${SB_TOP}; scons controller/src/config/vnc_openstack)
	mkdir -p ${SB_TOP}/build/python_dist
	(cd ${SB_TOP}/build/python_dist && tar zxf ${SB_TOP}/build/debug/config/vnc_openstack/dist/vnc_openstack-0.1dev.tar.gz)

override_dh_auto_install:
	install -d -m 755 $(buildroot)$(_venv_root)

#	Install vnc_openstack extension
	(cd ${SB_TOP}/build/python_dist/vnc_openstack-0.1dev && python setup.py install --root=$(buildroot) $(_venvtr))


override_dh_shlibdeps:
	dh_shlibdeps --dpkg-shlibdeps-params=--ignore-missing-info

