#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := $(SB_TOP)/build/debian/contrail-config
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):$(SB_TOP)/build/debian/contrail-libs/usr/lib64/contrail

export _bindir := /usr/bin
export _initddir := /etc/init.d
export _venv_root := /opt/contrail/api-venv
export _venvtr := --prefix=$(_venv_root)
export _pyver := 2.7
export _pysitepkg := /lib/python$(_pyver)/site-packages
export _build_dist := $(SB_TOP)/build/debug
export _srcdir = $(SB_TOP)/build/python_dist
export _sysconfdir := /etc
export _localstatedir := /var
export _src_config := $(SB_TOP)/tools/packaging/common/control_files

__python ?= /usr/bin/python

SRC_VER := $(shell cat $(SB_TOP)/controller/src/base/version.info)

BUILDTAG =
ifdef TAG
BUILDTAG = $(SRC_VER)-$(TAG)
else
BUILDTAG = $(SRC_VER)-$(BUILDTIME)
endif

TARGETS=controller/src/api-lib \
	controller/src/config/api-server \
	controller/src/config/common \
	controller/src/config/schema-transformer \
	controller/src/config/svc-monitor \
	controller/src/sandesh/common \
	controller/src/discovery \
	sandesh/library/python:pysandesh

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog
	(cd ${SB_TOP}; scons ${TARGETS})

	mkdir -p $(_srcdir)
	(cd $(_srcdir); tar zxf $(_build_dist)/config/api-server/dist/vnc_cfg_api_server-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/config/common/dist/cfgm_common-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/config/schema-transformer/dist/schema_transformer-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/config/svc-monitor/dist/svc_monitor-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/sandesh/common/dist/sandesh-common-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/tools/sandesh/library/python/dist/sandesh-0.1dev.tar.gz)
	(cd $(_srcdir); tar zxf $(_build_dist)/discovery/dist/discovery-0.1dev.tar.gz)

override_dh_auto_install:
	install -d -m 777 $(buildroot)$(_venv_root)
	install -d -m 777 $(buildroot)/usr/share/doc/python-vnc_cfg_api_server

#	Install vnc_api-0.1dev
	echo $(_build_dist)
	(cd $(_srcdir)/vnc_cfg_api_server-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

	(cd $(_srcdir)/cfgm_common-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

#	Install schema_transformer 	
	(cd $(_srcdir)/schema_transformer-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

#	Install svc_monitor
	(cd $(_srcdir)/svc_monitor-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

#	Install sandesh
	(cd $(_srcdir)/sandesh-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

	(cd $(_srcdir)/sandesh-common-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

#	Install discovery
	(cd $(_srcdir)/discovery-0.1dev; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

#	Install kazoo
	(cd $(SB_TOP)/distro/third_party/kazoo; $(__python) setup.py install --root=$(buildroot) $(_venvtr))
#	Install ncclient
	(cd $(SB_TOP)/distro/third_party/ncclient; $(__python) setup.py install --root=$(buildroot) $(_venvtr))

#	Install files
	install -D -m 644 $(_src_config)/api_server.conf $(buildroot)$(_sysconfdir)/contrail/api_server.conf
	install -D -m 644 $(_src_config)/schema_transformer.conf $(buildroot)$(_sysconfdir)/contrail/schema_transformer.conf
	install -D -m 644 $(_src_config)/svc_monitor.conf $(buildroot)$(_sysconfdir)/contrail/svc_monitor.conf
	install -D -m 644 $(_src_config)/discovery.conf $(buildroot)$(_sysconfdir)/contrail/discovery.conf
	install -p -m 644 $(_src_config)/redis_config.conf $(buildroot)$(_sysconfdir)/contrail/
        install -D -m 755 $(_src_config)/zookeeper.conf $(buildroot)$(_sysconfdir)/init/zookeeper.conf
	install -D -m 755 $(SB_TOP)/controller/src/config/schema-transformer/ifmap_view.py $(buildroot)$(_bindir)/ifmap_view.py
	install -d -m 777 $(buildroot)$(_localstatedir)/log/contrail

override_dh_usrlocal:	

override_dh_shlibdeps:
