#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1
SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := $(SB_TOP)/build/debian/contrail-libs
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):${buildroot}/usr/lib64/contrail
export _libdir := /usr/lib64
export _binddir := /usr/bin
export _ldconfdir := /etc/ld.so.conf.d

SRC_VER := $(shell cat $(SB_TOP)/controller/src/base/version.info)

BUILDTAG =
ifdef TAG
BUILDTAG = $(SRC_VER)-$(TAG)
else
BUILDTAG = $(SRC_VER)-$(BUILDTIME)
endif

LIBS="build/lib/libtbb_debug.so.2" \
     "build/lib/libthrift.a" \
     "build/lib/libboost_program_options.so" \
     "build/lib/libboost_system.so" \
     "build/lib/liblog4cplus.so"

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	cat $(SPEC_DIR)/debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > $(SPEC_DIR)/debian/changelog
	(cd ${SB_TOP}; scons ${LIBS})

override_dh_auto_install: 
#	Setup directory
	rm -rf $(buildroot)
	install -d -m 755 $(buildroot)$(_libdir)/contrail
	install -d -m 755 $(buildroot)$(_ldconfdir)
	install -d -m 755 $(buildroot)$(_binddir)

	install -p -m 755 ${SB_TOP}/build/lib/libtbb_debug.so.2 $(buildroot)$(_libdir)/contrail/libtbb_debug.so.2
	install -p -m 755 ${SB_TOP}/build/lib/libthrift-0.8.0.so $(buildroot)$(_libdir)/contrail/libthrift-0.8.0.so
	install -p -m 755 ${SB_TOP}/build/lib/libthriftasio.so.0.0.0 $(buildroot)$(_libdir)/contrail/libthriftasio.so.0.0.0
	install -p -m 755 ${SB_TOP}/build/lib/libboost_program_options.so.1.48.0 $(buildroot)$(_libdir)/contrail/libboost_program_options.so.1.48.0
	install -p -m 755 ${SB_TOP}/build/lib/libboost_filesystem.so.1.48.0 $(buildroot)$(_libdir)/contrail/libboost_filesystem.so.1.48.0
	install -p -m 755 ${SB_TOP}/build/lib/libboost_regex.so.1.48.0 $(buildroot)$(_libdir)/contrail/libboost_regex.so.1.48.0
	install -p -m 755 ${SB_TOP}/build/lib/libboost_system.so.1.48.0 $(buildroot)$(_libdir)/contrail/libboost_system.so.1.48.0
	install -p -m 755 ${SB_TOP}/build/lib/libboost_python.so.1.48.0 $(buildroot)$(_libdir)/contrail/libboost_python.so.1.48.0
	install -p -m 755 ${SB_TOP}/build/lib/liblog4cplus-1.1.so.7.0.0 $(buildroot)$(_libdir)/contrail/liblog4cplus-1.1.so.7.0.0
	echo "$(_libdir)/contrail" > $(buildroot)$(_ldconfdir)/contrail-64.conf

get-orig-source:
	uscan --verbose --rename --destdir=${SB_TOP}

override_dh_shlibdeps:
