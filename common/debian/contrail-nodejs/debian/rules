#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/tools\/packaging\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)

export buildroot := $(SB_TOP)/build/debian/contrail-nodejs
export _contrailbase := /opt/contrail
export _target := $(buildroot)/nodejs-v0.8.15
export _targetver := nodejs-v0.8.15
export _src := $(SB_TOP)/third_party/node-v0.8.15
export _bindir := /usr/bin

export WS := `cat ~/rpmbuild/SOURCES/git_root`
export LD_LIBRARY_PATH := $(LD_LIBRARY_PATH):debian/contrail-control/usr/lib64/contrail:debian/contrail-libs/usr/lib64/contrail

SRC_VER := $(shell cat $(SB_TOP)/controller/src/base/version.info)

BUILDTAG =
ifdef TAG
BUILDTAG = $(SRC_VER)-$(TAG)
else
BUILDTAG = $(SRC_VER)-$(BUILDTIME)
endif

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	mkdir $(buildroot)
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog 
	rm -rf $(_target)
	cd $(_src); ./configure --prefix=/usr --shared-openssl --shared-openssl-includes=/usr/include --shared-zlib --shared-zlib-includes=/usr/include; make binary -j4
	cp -p $(_src)/out/Release/node $(buildroot)/../.

override_dh_auto_install: 
	# Install directories
	install -d -m 755 $(buildroot)/$(_contrailbase)/$(_targetver)/bin
	install -d -m 755 $(buildroot)/$(_bindir)
	# Copy/install files
	mv $(buildroot)/../node $(buildroot)/$(_contrailbase)/$(_targetver)/bin
	ln -sf $(_contrailbase)/$(_targetver)/bin/node $(buildroot)/$(_bindir)/nodejs-contrail


override_dh_shlibdeps:
