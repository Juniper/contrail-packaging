#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE=1

SPEC_DIR := $(shell pwd)
export SB_TOP := $(shell pwd | sed -re "s/(.*)\/build\/debian\/(.*)/\1/")

export BUILDTIME := $(shell date -u +%y%m%d%H%M)
export buildroot := ${SB_TOP}/build/debian/contrail-vrouter-dpdk-init
export _confsrcdir := ${SB_TOP}/tools/packaging/common/control_files
export _dpdkconfsrcdir := ${SB_TOP}/tools/packaging/common/debian/contrail-vrouter-dpdk-init

export _opt_bin := /opt/contrail/bin
export _nodemgr_config := $(SB_TOP)/controller/src/nodemgr/vrouter_nodemgr
export _servicedir := /etc/systemd/system

SRC_VER := $(shell cat $(SB_TOP)/controller/src/base/version.info)

BUILDTAG =
ifdef TAG
BUILDTAG = $(SRC_VER)-$(TAG)
else
BUILDTAG = $(SRC_VER)-$(BUILDTIME)
endif

%:
	dh $@ --tmpdir=${buildroot} --destdir=${SB_TOP}/build/debian

override_dh_auto_build: 
	cat debian/changelog.in | sed 's,BUILDTAG,$(BUILDTAG),g' > debian/changelog

override_dh_auto_install:
	install -d -m 755 ${buildroot}/etc/init
	install -d -m 755 ${buildroot}/etc/contrail
	install -d -m 755 ${buildroot}${_opt_bin}
	install -d -m 755 $(buildroot)$(_servicedir)
	install -d -m 755 ${buildroot}/var/log/contrail
	install -p -m 644 $(_confsrcdir)/core-pattern.upstart ${buildroot}/etc/init/core-pattern.conf
	install -p -m 755 $(_dpdkconfsrcdir)/vrouter-dpdk-pre-start.sh ${buildroot}${_opt_bin}/vrouter-pre-start.sh
	install -p -m 755 $(_confsrcdir)/vrouter-pre-start.sh ${buildroot}${_opt_bin}/vrouter-post-start.sh
	install -p -m 755 $(_confsrcdir)/vrouter-pre-stop.sh ${buildroot}${_opt_bin}
	install -p -m 755 $(_dpdkconfsrcdir)/vrouter-dpdk-post-stop.sh ${buildroot}${_opt_bin}/vrouter-post-stop.sh
	install -p -m 755 $(_dpdkconfsrcdir)/dpdk_nic_bind.py ${buildroot}${_opt_bin}
	install -p -m 755 $(_confsrcdir)/vnagent_param_setup_ubuntu.sh ${buildroot}${_opt_bin}/vnagent_param_setup.sh
	install -p -m 755 $(_dpdkconfsrcdir)/if-vhost0 ${buildroot}${_opt_bin}
	install -p -m 755 $(_confsrcdir)/vrouter-functions.sh ${buildroot}${_opt_bin}
	install -p -m 755 $(_confsrcdir)/contrail_reboot  ${buildroot}/etc/contrail/contrail_reboot
	install -p -m 755 $(_confsrcdir)/agent.conf  ${buildroot}/etc/contrail/rpm_agent.conf


override_dh_shlibdeps:
